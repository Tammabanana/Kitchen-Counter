<?xml version="1.0" encoding="utf-8" ?>

<Buildings>

 
  <ThingDef ParentName="FurnitureBase">
    <defName>FoodCache</defName>
    <label>food cache</label>
    <thingClass>Building_Storage</thingClass>
    <graphicData>
      <texPath>FoodRack/FoodRack</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1.75,1.75)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>15</costStuffCount>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
	  <Mass>4</Mass>
      <WorkToBuild>500</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>Foods stored in this will not deteriorate, even if outside, but will still spoil.</description>
    <size>(1,1)</size>
    <building>
      <preventDeterioration>true</preventDeterioration>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>Foods</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>Foods</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
  </ThingDef>

